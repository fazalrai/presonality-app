  <style>

    .glow-on-hover {
    border: none;
    outline: none;
    padding: 30px 60px;
    text-decoration: none;
    background-color: #000033;

    color: white;
    cursor: pointer;
    position: relative;
    z-index: 0;
    font-size: 30px;
    border-radius: 60px;
    animation: glowing 20s linear infinite;
}

.glow-on-hover:before {
    content: '';
    background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
    position: absolute;
    top: -2px;
    left:-2px;
    background-size: 400%;
    z-index: -1;
    filter: blur(5px);
    background-color: #000033;
    width: calc(100% + 6px);
    height: calc(100% + 6px);
    animation: glowing 20s linear infinite;
    
    opacity: 1;
    font-size: 30px;
    transition: opacity .3s ease-in-out;
    border-radius: 80px;
}

.glow-on-hover:active {
    color: #000
}

.glow-on-hover:active:after {
    background: transparent;
    color: 1;
}

.glow-on-hover:hover:before {
    opacity: 1;
}

.glow-on-hover:after {
    z-index: -1;
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000033;
    left: 0;
    top: 0;
    border-radius: 80px;
}

a:hover{
  text-decoration: none;
  color: white;
}

@keyframes glowing {
    0% { background-position: 0 0; }
    50% { background-position: 400% 0; }
    100% { background-position: 0 0; }
}

  </style>
